<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextView" parent="AppTheme">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextView.small" parent="TextView">
        <item name="android:textSize">@dimen/font_small</item>
    </style>



    <style name="TextView.Actionable" parent="TextView">
        <item name="android:textColor">@color/actionable</item>
    </style>

    <style name="TextView.Header" parent="TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextView.Title" parent="TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="Button" parent="AppTheme">
        <item name="colorButtonNormal">@color/actionable</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="FloatingActionButton" parent="AppTheme">
        <item name="backgroundTint">@color/actionable</item>
    </style>
</resources>
