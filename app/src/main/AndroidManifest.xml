<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitnation">

    <application
        android:name=".base.FitNationApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".navigation.NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".intro.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:parentActivityName=".intro.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".exercise.CreateExerciseActivity"
            android:label="@string/title_activity_create_exercise"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>